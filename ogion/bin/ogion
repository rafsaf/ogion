# Add the ogion installation directory to PYTHONPATH
SCRIPT_DIR="$(cd "$(dirname "$0")/.." && pwd)"
export PYTHONPATH="${SCRIPT_DIR}:${PYTHONPATH}"

exec python -m ogion.main "$@"
